# aliase for ip utils
alias ipi='ip -4 -c -br -h -o link show'
alias ipa='ip -4 -c -br -h -o a'
alias ipr='ip -4 -c -br -h -o r'
alias ipn='ip -4 -c -br -h -o n'


alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias k='kubectl'
alias kgp='kubectl get po'
alias kgpg='kubectl get po | grep'
alias kgs='kubectl get svc'
alias kgsg='kubectl get svc | grep'
alias kd='kubectl delete -f'
alias ka='kubectl apply -f'
alias ke='kubectl exec -it'
alias kl='kubectl logs'
alias kr='kubectl rollout restart deployment'
alias kpf='kubectl port-forward'
alias kx='kubectx'
alias i='istioctl'
alias k1='kubectl get pods --sort-by=".status.containerStatuses[0].restartCount" | awk '\''{ if ($4 != "0") print }'\'''
alias k2='kubectl get pods --sort-by='.status.containerStatuses[0].restartCount' |grep -v Running'
alias kdp='kubectl describe pod'
alias tr='terraform'
alias cbc='xclip -sel clip'
alias cbp='xclip -sel clip -o'
alias s1='echo Prometheus loading...;pod=$(kubectl get pods --namespace monitoring -l "app.kubernetes.io/name=prometheus" -o jsonpath="{.items[0].metadata.name}") && kubectl port-forward ${pod} 8080:9090 -n monitoring'
alias s2='echo Alermanager loading...;pod=$(kubectl get pods --namespace monitoring -l "app.kubernetes.io/name=alertmanager" -o jsonpath="{.items[0].metadata.name}") && kubectl port-forward ${pod} 8080:9093 -n monitoring'
alias s3='echo Kiali loading...;pod=$(kubectl get pods --namespace istio-system -l "app.kubernetes.io/name=kiali" -o jsonpath="{.items[0].metadata.name}") && kubectl port-forward ${pod} 8080:20001 -n istio-system'
alias s4='echo Jaeger loading...;pod=$(kubectl get pods --namespace istio-system -l "app=jaeger" -o jsonpath="{.items[0].metadata.name}") && kubectl port-forward ${pod} 8080:16686 -n istio-system'

